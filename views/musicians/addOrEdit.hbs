<h3>{{viewTitle}}</h3>
 
<form action="/musicians" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{musician._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{musician.fullName}}">
        <div class="text-danger">
            {{musician.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{musician.email}}">
        <div class="text-danger">
            {{musician.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="number" class="form-control" name="mobile" placeholder="Mobile" value="{{musician.mobile}}">
            <div class="text-danger">
            {{musician.mobileError}}</div>
        </div>
        
        
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{musician.city}}">
            <div class="text-danger">
            {{musician.cityError}}</div>
        </div>
        
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/musicians/list"><i class="fa fa-list-alt"></i> View All</a>
       
    </div>
</form>